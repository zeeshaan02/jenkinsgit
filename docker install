pipeline {
    agent any

    stages {
        stage('Update System') {
            steps {
                echo 'ğŸ”„ Updating system packages...'
                sh '''
                sudo apt-get update -y
                sudo apt-get upgrade -y
                '''
            }
        }

        stage('Install Dependencies') {
            steps {
                echo 'ğŸ“¦ Installing dependencies...'
                sh '''
                sudo apt-get install ca-certificates curl gnupg lsb-release -y
                '''
            }
        }

        stage('Add Docker GPG Key & Repo') {
            steps {
                echo 'ğŸ”‘ Adding Docker GPG key and repository...'
                sh '''
                sudo mkdir -p /etc/apt/keyrings
                curl -fsSL https://download.docker.com/linux/ubuntu/gpg | sudo gpg --dearmor -o /etc/apt/keyrings/docker.gpg

                echo \
                "deb [arch=$(dpkg --print-architecture) signed-by=/etc/apt/keyrings/docker.gpg] \
                https://download.docker.com/linux/ubuntu \
                $(lsb_release -cs) stable" | sudo tee /etc/apt/sources.list.d/docker.list > /dev/null
                '''
            }
        }

        stage('Install Docker Engine') {
            steps {
                echo 'ğŸ³ Installing Docker Engine...'
                sh '''
                sudo apt-get update -y
                sudo apt-get install docker-ce docker-ce-cli containerd.io docker-buildx-plugin docker-compose-plugin -y
                '''
            }
        }

        stage('Enable Docker Service') {
            steps {
                echo 'ğŸš€ Enabling and starting Docker service...'
                sh '''
                sudo systemctl enable docker
                sudo systemctl start docker
                '''
            }
        }

        stage('Verify Docker Installation') {
            steps {
                echo 'âœ… Verifying Docker...'
                sh '''
                docker --version
                sudo docker run hello-world || true
                '''
            }
        }

        stage('Allow Jenkins to Use Docker') {
            steps {
                echo 'ğŸ‘¤ Adding Jenkins user to Docker group...'
                sh '''
                sudo usermod -aG docker jenkins
                sudo systemctl restart jenkins
                '''
            }
        }
    }

    post {
        success {
            echo 'ğŸ‰ Docker installation completed successfully!'
        }
        failure {
            echo 'âŒ Docker installation failed. Check logs for details.'
        }
    }
}
